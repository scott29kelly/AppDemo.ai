generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserPlan {
  free
  creator
  pro
  agency
}

enum ProjectStatus {
  draft
  analyzing
  analysis_complete
  recording
  rendering
  completed
  failed
}

enum JobType {
  analysis
  recording
  rendering
}

enum JobStatus {
  pending
  processing
  completed
  failed
}

model User {
  id               String    @id @default(uuid()) @db.Uuid
  email            String    @unique @db.VarChar(255)
  name             String?   @db.VarChar(255)
  plan             UserPlan  @default(free)
  stripeCustomerId String?   @map("stripe_customer_id") @db.VarChar(255)
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  projects Project[]

  @@map("users")
}

model Project {
  id               String        @id @default(uuid()) @db.Uuid
  userId           String        @map("user_id") @db.Uuid
  name             String        @db.VarChar(255)
  status           ProjectStatus @default(draft)
  appUrl           String        @map("app_url")
  githubUrl        String?       @map("github_url")
  targetAudience   String?       @map("target_audience")
  analysis         Json?
  script           Json?
  timingMetadata   Json?         @map("timing_metadata")
  videoTeaserUrl   String?       @map("video_teaser_url")
  videoStandardUrl String?       @map("video_standard_url")
  videoFullUrl     String?       @map("video_full_url")
  subtitlesUrl     String?       @map("subtitles_url")
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobs Job[]

  @@index([userId])
  @@index([status])
  @@map("projects")
}

model Job {
  id           String    @id @default(uuid()) @db.Uuid
  projectId    String    @map("project_id") @db.Uuid
  type         JobType
  status       JobStatus @default(pending)
  progress     Int       @default(0)
  errorMessage String?   @map("error_message")
  createdAt    DateTime  @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([status])
  @@map("jobs")
}
